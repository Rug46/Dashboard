@model IEnumerable<Dashboard.Models.BacklogModel>

@{
    ViewData["Title"] = "Backlog";
}

<style>
    th {
        background-color: gray;
        color: white;
        padding: 0px 10px;
    }

    tfoot th {
        background-color: #969696;
        color: white;
        padding: 0px 10px;
    }

    td {
        padding: 0px 10px;
    }

    table {
        width: 100%;
    }

    .playStatus {
        font-size: 20px;
        margin-bottom: 10px;
    }

    .green {
        color: green;
    }

    .progress .green {
        background-color: green;
    }

    .red {
        color: red;
    }

    .progress .red {
        background-color: red;
    }

    .blue {
        color: cadetblue;
    }

    .progress .blue {
        background-color: cadetblue;
    }

    .gold {
        color: gold;
    }

    .progress .gold {
        background-color: gold;
    }

    .silver {
        color: silver;
    }

    .progress .silver {
        background-color: silver;
    }

    .progress {
        height: 20px;
        margin: 0px 10px;
    }

    .progress-td {
        width: 85%;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>Backlog</h1>
                    <br />
                    @using (var db = new Dashboard.Data.Database())
                    {
                        var records = db.Backlog
                            .OrderBy(bm => bm.Id)
                            .ToList();

                        var nowplaying = records
                            .Where(bm => bm.NowPlaying != 0)
                            .OrderBy(bm => bm.Id)
                            .ToList();

                        var systems = Dashboard.Helpers.Backlog.GetSystems();

                        <table>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Now Playing</th>
                                    <th>Progress Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < nowplaying.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <i class="ti-marker-alt"></i>
                                        </td>
                                        <td>
                                            @nowplaying.ElementAt(i).Name
                                        </td>
                                        <td>
                                            @nowplaying.ElementAt(i).Progress
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr />
                        <table class="playStatus">
                            <tr>
                                <td>
                                    0 <i class="ti-medall-alt red"></i>
                                </td>
                                <td class="progress-td">
                                    <div class="progress">
                                        <div class="progress-bar silver" role="progressbar" style="width: 17%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                                        <div class="progress-bar red" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    0%
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    0 <i class="ti-medall-alt green"></i>
                                </td>
                                <td class="progress-td">
                                    <div class="progress">
                                        <div class="progress-bar green" role="progressbar" style="width: 23%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    0%
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    0 <i class="ti-medall-alt gold"></i>
                                </td>
                                <td class="progress-td">
                                    <div class="progress">
                                        <div class="progress-bar gold" role="progressbar" style="width: 8%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    0%
                                </td>
                            </tr>
                        </table>
                        <table>
                            <thead>
                                <tr>
                                    <th>System</th>
                                    <th>U</th>
                                    <th>B</th>
                                    <th>C</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < systems.Count; i++)
                                {
                                    <tr>
                                        <td>@systems.ElementAt(i)</td>
                                        <th>0</th>
                                        <th>0</th>
                                        <th>0</th>
                                        <th>0</th>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>0</th>
                                </tr>
                            </tfoot>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>