
@{
    ViewData["Title"] = "Export";
}

<style>
    form {
        margin: 10px;
    }
</style>

<div class="col-lg-12">
    <div class="single-report">
        <h1>Export</h1>
        <form action="/Activity/Export" method="post">
            <div class="form-group">
                <label>Format</label><br />
                <input type="radio" name="format" value="0" checked /> CSV<br />
                <input type="radio" name="format" value="1" disabled /> XML<br />
            </div>
            <div class="form-group">
                <label>Data From</label><br />
                <div class="float-left" style="margin-right: 10px;">
                    <input type="radio" name="dataFrom" value="0" checked /> All Data<br />
                    <input type="radio" name="dataFrom" value="1" /> Last 24 Hours<br />
                    <input type="radio" name="dataFrom" value="2" /> Last 7 Days<br />
                    <input type="radio" name="dataFrom" value="3" /> Last 28 Days<br />
                </div>
                <div>
                    <input type="radio" name="dataFrom" value="4" /> Last 10 Records<br />
                    <input type="radio" name="dataFrom" value="5" /> Last 25 Records<br />
                    <input type="radio" name="dataFrom" value="6" /> Last 50 Records<br />
                    <input type="radio" name="dataFrom" value="7" /> Last 100 Records<br />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Export" />
            </div>
        </form>
    </div>
</div>