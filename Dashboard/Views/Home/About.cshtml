
@{
    ViewData["Title"] = "About";
}

<style>
    th {
        background-color: gray;
        color: white;
        padding: 0px 10px;
        font-size: 18px;
    }

    tfoot th {
        background-color: #969696;
        color: white;
        padding: 0px 10px;
        font-size: 16px;
    }

    td {
        padding: 0px 10px;
        font-size: 16px;
    }

    table {
        width: 100%;
        margin-top: 10px;
    }
</style>

@{ 
    var isParent = Dashboard.Helpers.Account.IsParent(Dashboard.Helpers.Account.GetUserId(User.Identity.Name));
    var enableLinks = Dashboard.Helpers.UserSetting.GetSettingValueOrDefault(Dashboard.Helpers.Account.GetUserId(User.Identity.Name), Dashboard.Helpers.Setting.GetSettingId("enableLinks"));
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>About</h1>
                    <p>A dashboard for tracking game playtime and your game backlog.</p>
                    <hr />
                    <h2>Credits</h2>
                    <table>
                        <tbody>
                            <tr>
                                <td>SRTdash</td>
                                <td>Colorlib</td>

                                @if (isParent || bool.Parse(enableLinks))
                                {
                                    <td><a href="https://github.com/puikinsh/srtdash-admin-dashboard">GitHub</a></td>
                                }
                            </tr>
                            <tr>
                                <td>ScrapySharp</td>
                                <td>Flechner Romain</td>

                                @if (isParent || bool.Parse(enableLinks))
                                {
                                    <td><a href="https://github.com/rflechner/ScrapySharp">GitHub</a></td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>