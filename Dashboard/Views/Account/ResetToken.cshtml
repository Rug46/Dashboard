
@{
    ViewData["Title"] = "Reset";
    Layout = "~/Views/Shared/_LayoutNoAuth.cshtml";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>Reset Password</h1>
                    @if (Dashboard.Helpers.Account.TokenExists(TempData["Token"].ToString()))
                    {
                        <form method="post">
                            <input type="text" id="token" name="token" placeholder="Token" class="form-control" value="@TempData["Token"].ToString()" readonly />
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" />
                            <input type="password" id="confirm" name="confirm" placeholder="Confirm Password" class="form-control" />
                            <input type="submit" value="Reset" class="btn btn-primary" />
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Invalid token. Click <a href="/Account/Reset">here</a> to generate a new one
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>  