
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutNoAuth.cshtml";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>Register Parent Account</h1>
                    <form asp-action="Register" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="User Name" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" />
                        </div>
                        <hr />

                        @{
                            var questions = Dashboard.Helpers.SecurityQuestion.GetQuestions();
                        }

                        <div class="form-group">
                            <label>Security Question 1</label>
                            <select name="question1" class="form-control" style="height: auto;">
                                <option value="0" selected disabled>Select...</option>
                                @foreach (var question in questions)
                                {
                                    <option value="@question.Id">@question.Question</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Answer to Security Question 1</label>
                            <input type="text" class="form-control" name="answer1" />
                        </div>

                        <div class="form-group">
                            <label>Security Question 2</label>
                            <select name="question2" class="form-control" style="height: auto;">
                                <option value="0" selected disabled>Select...</option>
                                @foreach (var question in questions)
                                {
                                    <option value="@question.Id">@question.Question</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Answer to Security Question 2</label>
                            <input type="text" class="form-control" name="answer2" />
                        </div>

                        <div class="form-group">
                            <label>Security Question 3</label>
                            <select name="question3" class="form-control" style="height: auto;">
                                <option value="0" selected disabled>Select...</option>
                                @foreach (var question in questions)
                                {
                                    <option value="@question.Id">@question.Question</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Answer to Security Question 3</label>
                            <input type="text" class="form-control" name="answer3" />
                        </div>
                        <div class="form-check">
                            <button type="submit" class="btn btn-primary">Register</button>
                            <a type="button" class="btn btn-secondary" href="/Account/Login">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>