@model IEnumerable<Dashboard.Models.PlaytimeModel>

@{
    ViewData["Title"] = "Activity";
}

<style>
    th {
        background-color: gray;
        color: white;
        padding: 0px 10px;
    }

    td {
        padding: 0px 10px;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Game)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Finish)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mode)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Game)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Finish)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mode)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @{
                        var LastPage = Dashboard.Data.Playtime.GetLastPage();
                    }
                    <nav aria-label="Page Navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" onclick="firstPage()" aria-label="First">
                                    <span aria-hidden="true"><i class="ti-angle-double-left"></i></span>
                                    <span class="sr-only">First</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" onclick="prevPage()" aria-label="Previous">
                                    <span aria-hidden="true"><i class="ti-angle-left"></i></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            @for (int i = 0; i < LastPage; i++)
                            {
                                if (i == LastPage - 1 && i > 5)
                                {
                                    <li class="page-item"><a class="page-link">...</a></li>
                                    <li class="page-item"><a class="page-link" href="/Playtime/Index/@(LastPage )">@(LastPage)</a></li>
                                }
                                else if (i == LastPage - 1)
                                {
                                    <li class="page-item"><a class="page-link" href="/Playtime/Index/@(LastPage )">@(LastPage)</a></li>
                                }
                                else if (i > 5)
                                {
                                    return;
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/Playtime/Index/@(i + 1)">@(i + 1)</a></li>
                                }
                            }

                            <li class="page-item">
                                <a class="page-link" onclick="nextPage()" aria-label="Next">
                                    <span aria-hidden="true"><i class="ti-angle-right"></i></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" onclick="lastPage()" aria-label="Last">
                                    <span aria-hidden="true"><i class="ti-angle-double-right"></i></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <script>
                        function firstPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/0";
                        }

                        function prevPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + (page - 1);
                        }

                        function nextPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + (page + 1);
                        }

                        function lastPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + @(Dashboard.Data.Playtime.GetLastPage() - 1);
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>