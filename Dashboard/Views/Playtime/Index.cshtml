@model IEnumerable<Dashboard.Models.PlaytimeModel>

@{
    ViewData["Title"] = "Activity";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Game)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Finish)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mode)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Game)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Finish)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mode)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <style>
                        .pageButton {
                            font-size: 16px;
                            border: none;
                            background-color: lightgrey;
                            padding: 0px;
                            margin: 1px;
                            width: 30px;
                        }
                    </style>
                    <div style="width:250px;margin:auto;">
                        <input type="button" value="<<" class="pageButton" id="btnFirst" onclick="firstPage()" />
                        <input type="button" value="<" class="pageButton" id="btnPrev" onclick="prevPage()" />
                        Page <span id="page">@Dashboard.Data.Playtime.GetCurrentPage()</span> of <span id="pageLast">@Dashboard.Data.Playtime.GetLastPage()</span>
                        <input type="button" value=">" class="pageButton" id="btnNext" onclick="nextPage()" />
                        <input type="button" value=">>" class="pageButton" id="btnLast" onclick="lastPage()" />
                    </div>
                    <script>
                        function firstPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/0";
                        }

                        function prevPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + (page - 1);
                        }

                        function nextPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + (page + 1);
                        }

                        function lastPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Index/" + @(Dashboard.Data.Playtime.GetLastPage() - 1);
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>