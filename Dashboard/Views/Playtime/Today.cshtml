                        function prevPage() {
                            var url = window.location.href;
                            var urlSplit = url.split("/");
                            var page = urlSplit[urlSplit.length - 1];

                            window.location.href = "/Playtime/Today/" + (page - 1);
                        }
                    </script>*@
                    <script src="~/js/playtime.js"></script>
                </div>
            </div>
        </div>
    </div>
</div>