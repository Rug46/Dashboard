@model IEnumerable<Dashboard.Models.PlaytimeModel>

@{
    ViewData["Title"] = "Last 24 Hours";
}

<style>
    th {
        background-color: gray;
        color: white;
        padding: 0px 10px;
    }

    td {
        padding: 0px 10px;
    }

    table {
        width: 100%;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Game)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Finish)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mode)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                var records = Model
                                    .Where(ptm => ptm.Date.Date >= DateTime.Now.AddHours(-24))
                                    //.OrderBy(ptm => ptm.Date)
                                    .OrderByDescending(ptm => ptm.Date)
                                    .ToList();
                            }
                            @foreach (var item in records)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Game)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Finish)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mode)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @{ 
                        var LastPage = Dashboard.Helpers.Playtime.GetLastPage();
                        var currentPage = int.Parse(ViewData["Page"].ToString());
                    }

                    <nav aria-label="Page Navigation">
                        <ul class="pagination justify-content-center">
                            @if (currentPage == 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" onclick="firstPage('Today')" aria-label="First">
                                        <span aria-hidden="true"><i class="ti-angle-double-left"></i></span>
                                        <span class="sr-only">First</span>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <a class="page-link" onclick="prevPage('Today')" aria-label="Previous">
                                        <span aria-hidden="true"><i class="ti-angle-left"></i></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" onclick="firstPage('Today')" aria-label="First">
                                        <span aria-hidden="true"><i class="ti-angle-double-left"></i></span>
                                        <span class="sr-only">First</span>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" onclick="prevPage('Today')" aria-label="Previous">
                                        <span aria-hidden="true"><i class="ti-angle-left"></i></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                            }
                            @for (int i = 0; i < LastPage; i++)
                            {
                                if (i == LastPage - 1 && i > 5)
                                {
                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                    <li class="page-item"><a class="page-link" href="/Playtime/Today/@(LastPage - 1)">@(LastPage)</a></li>
                                }
                                else if (i == LastPage - 1)
                                {
                                    <li class="page-item"><a class="page-link" href="/Playtime/Today/@(LastPage - 1)">@(LastPage)</a></li>
                                }
                                else if (i > 5)
                                {
                                    return;
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/Playtime/Index/@(i)">@(i + 1)</a></li>
                                }
                            }
                            @if (currentPage == LastPage)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" onclick="nextPage('Today')" aria-label="Next">
                                        <span aria-hidden="true"><i class="ti-angle-right"></i></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <a class="page-link" onclick="lastPage('today', '@(Dashboard.Helpers.Playtime.GetLastPage() - 1)')" aria-label="Last">
                                        <span aria-hidden="true"><i class="ti-angle-double-right"></i></span>
                                        <span class="sr-only">Last</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" onclick="nextPage('today')" aria-label="Next">
                                        <span aria-hidden="true"><i class="ti-angle-right"></i></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" onclick="lastPage('today', '@(Dashboard.Helpers.Playtime.GetLastPage() - 1)')" aria-label="Last">
                                        <span aria-hidden="true"><i class="ti-angle-double-right"></i></span>
                                        <span class="sr-only">Last</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
