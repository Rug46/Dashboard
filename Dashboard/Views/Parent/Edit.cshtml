
@{
    ViewData["Title"] = "Edit Child Account";
    var id = (int)TempData["id"];
    var username = Dashboard.Helpers.Account.GetUsername(id);
}

<style>
    .btn-custom, .btn-custom:link, .btn-custom:visited, .btn-custom:hover, .btn-custom:active {
        padding: 0;
        color: black;
        font-style: normal;
        text-decoration: none;
        margin-left: 5px;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>Edit @username</h1>
                    <br />
                    <form method="post" action="/Parent/Edit/@id">
                        <div class="form-group">
                            <h2>Permissions</h2>
                            <table>
                                <tr>
                                    <td style="padding-right: 10px;">External Links</td>
                                    <td>
                                        <select class="textbox" name="enableLinks" id="enableLinks">
                                            <option value="true">Enable</option>
                                            <option value="false">Disable</option>
                                        </select>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var enableLinks = "@TempData["enableLinks"].ToString()";

    if (enableLinks == "true") {
        document.getElementById("enableLinks").selectedIndex = 0;
    } else {
        document.getElementById("enableLinks").selectedIndex = 1;
    }
</script>