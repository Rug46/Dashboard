
@{
    ViewData["Title"] = "New Child";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>New Child</h1>
                    <br />
                    <form action="/Parent/NewChild" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="Username" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="Email" class="form-control" value="@Dashboard.Helpers.Account.GetEmail(Dashboard.Helpers.Account.GetUserId(User.Identity.Name))" readonly />
                        </div>
                        <div class="form-group">
                            <input type="hidden" value="@Dashboard.Helpers.Account.GetUserId(User.Identity.Name)" name="ParentAccountId" />
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>