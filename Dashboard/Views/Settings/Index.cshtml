@model IEnumerable<Dashboard.Models.ActivityModel>

@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .textbox-task {
        width: 265px;
        height: 25px;
        border: 0;
        border-right: 1px solid lightgray;
        padding-left: 10px;
    }

    .btn-custom, .btn-custom:link, .btn-custom:visited, .btn-custom:hover, .btn-custom:active {
        padding: 0;
        color: black;
        font-style: normal;
        text-decoration: none;
    }

    .list-group {
        padding-top: 10px;
        width: 300px;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1>Settings</h1>
                    <hr />
                    <div class="col-lg-6">
                        <h2>Game Modes</h2>
                        <ul class="list-group">
                            @for (int i = 1; i < Dashboard.Helpers.GameMode.GetCount() + 1; i++)
                            {
                                <li class="list-group-item">
                                    @Dashboard.Helpers.GameMode.GetMode(i)
                                    <div class="float-right">
                                        <a href="/Settings/RemoveGameMode/@Dashboard.Helpers.GameMode.GetID(Dashboard.Helpers.GameMode.GetMode(i))" class="btn-custom"><i class="ti-close"></i></a>
                                    </div>
                                </li>
                            }
                            <li class="list-group-item" style="padding-top: 0; padding-bottom: 0; padding-left: 0;">
                                <form action="Settings/NewGameMode" method="post">
                                    <input type="text" placeholder="New Mode" class="textbox-task" name="Mode" />
                                    <div class="float-right">
                                        <button type="submit" class="btn btn-link btn-custom"><i class="ti-arrow-right align-middle"></i></button>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <h2>Games</h2>
                        <ul class="list-group">
                            @for (int i = 1; i < Dashboard.Helpers.Games.GetCount() + 1; i++)
                            {
                                <li class="list-group-item">
                                    @Dashboard.Helpers.Games.GetGame(i)
                                    <div class="float-right">
                                        <a href="/Settings/RemoveGame/@Dashboard.Helpers.Games.GetID(Dashboard.Helpers.Games.GetGame(i))" class="btn-custom"><i class="ti-close"></i></a>
                                    </div>
                                </li>
                            }
                            <li class="list-group-item" style="padding-top: 0; padding-bottom: 0; padding-left: 0;">
                                <form action="Settings/NewGame" method="post">
                                    <input type="text" placeholder="New Game" class="textbox-task" name="Game" />
                                    <div class="float-right">
                                        <button type="submit" class="btn btn-link btn-custom"><i class="ti-arrow-right align-middle"></i></button>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
<script src="~/js/year.js"></script>