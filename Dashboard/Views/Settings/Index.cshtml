@model IEnumerable<Dashboard.Models.ActivityModel>

@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .textbox-task {
        width: 245px;
        height: 25px;
        border: 0;
        border-right: 1px solid lightgray;
        padding-left: 10px;
    }

    .btn-custom, .btn-custom:link, .btn-custom:visited, .btn-custom:hover, .btn-custom:active {
        padding: 0;
        color: black;
        font-style: normal;
        text-decoration: none;
    }

    .list-group {
        margin-top: 10px;
        width: 300px;
        height: 300px;
        max-height: 300px;
        overflow-y: auto;
        background-color: #eeeeee;
        border-radius: 5px;
        border: 1px solid #eeeeee;
    }

    .list-group-item {
        border: 1px solid #eeeeee;
    }

    .yellow {
        color: orange;
    }

    .btn-fav {
        margin-right: 5px;
        font-size: 16px;
    }
</style>

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"].ToString()
                        </div>
                    }

                    @if (TempData["ErrorStop"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorStop"].ToString()
                        </div>
                    }
                    else
                    {
                        <h1>Settings</h1>
                        <form method="post" action="/Settings/Index">
                            <div class="form-group">
                                <table>
                                    <tr>
                                        <td style="padding-right: 10px;">External Links</td>
                                        <td>
                                            <select class="textbox" name="enableLinks" id="enableLinks">
                                                <option value="true">Enable</option>
                                                <option value="false">Disable</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-right: 10px;">Private Profile</td>
                                        <td>
                                            <select class="textbox" name="privateProfile" id="private">
                                                <option value="true">Enable</option>
                                                <option value="false">Disable</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var enableLinks = "@TempData["enableLinks"].ToString()";
    var private = "@TempData["private"].ToString()";

    if (enableLinks == "true") {
        document.getElementById("enableLinks").selectedIndex = 0;
    } else {
        document.getElementById("enableLinks").selectedIndex = 1;
    }

    if (private == "true") {
        document.getElementById("private").selectedIndex = 0;
    } else {
        document.getElementById("private").selectedIndex = 1;
    }
</script>